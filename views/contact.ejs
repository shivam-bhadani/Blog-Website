<%- include('./partials/header') %>
    <link rel="shortcut icon" href="favicon.jpg" type="image/x-icon">
    <link rel="stylesheet" href="css/contact.css">

    <title>Contact Me - Code Runners</title>
    </head>

    <body>

        <%- include("./partials/nav") %>

            <div class="contact-page-container">

                <div class="contact-info-container">

                    <h1>Contact info</h1><br><br>
                    <p>If you have any query, please do not hesitate to contact me.</p><br><br>
                    <p>If you have a technical question, please make sure to include as many details as possible so that
                        I
                        can
                        provide the best assistance to you.</p><br><br>
                    <p><strong>I respond to ALL emails personally.</strong></p><br><br>
                    <p><strong>Email :</strong> <a href="mailto: coderunners10@gmail.com"
                            class="mail">coderunners10@gmail.com</a></p><br>
                    <p><strong>Mobile :</strong> +91 7004682009</p>

                </div>


                <div class="contact-form-container">

                    <form class="contact-form">

                        <div class="contact-form-group">
                            <label for="name" class="contact-form-label">Your name <span
                                    class="required">*</span></label><br>
                            <input type="text" name="name" id="name" class="contact-form-input">
                            <p class="contact-form-error"></p>
                        </div>
                        <div class="contact-form-group">
                            <label for="email" class="contact-form-label">Your email <span
                                    class="required">*</span></label><br>
                            <input type="text" name="email" id="email" class="contact-form-input">
                            <p class="contact-form-error"></p>
                        </div>
                        <div class="contact-form-group">
                            <label for="subject" class="contact-form-label">Subject <span
                                    class="required">*</span></label><br>
                            <input type="text" name="subject" id="subject" class="contact-form-input">
                            <p class="contact-form-error"></p>
                        </div>
                        <div class="contact-form-group">
                            <label for="message" class="contact-form-label">Your message <span
                                    class="required">*</span></label><br>
                            <textarea name="message" id="message" cols="78" rows="12"
                                class="contact-form-input"></textarea>
                            <p class="contact-form-error"></p>
                        </div>
                        <div class="contact-form-group">
                            <button type="submit" class="btn">SEND</button>
                        </div>

                    </form>

                </div>

            </div>

            <%- include('./partials/footer') %>

                <script src="js/navbar.js"></script>
                <script src="js/contact.js"></script>
                <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    </body>

    </html>